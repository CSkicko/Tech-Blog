<div class="row justify-content-center">
    <div class="col-6 p-4 rounded bg-secondary text-center text-white">
        <h2 class="mb-4">Login</h2>
        <form>
            <div class="form-group text-center my-3">
                <label for="username">Username</label>
                <input type="input" class="form-control my-2" id="username" placeholder="Enter your username...">
            </div>
            <div class="form-group text-center my-3">
                <label for="password">Password</label>
                <input type="password" class="form-control my-2" id="password" placeholder="Enter your password...">
            </div>
            <button type="submit" class="btn btn-info mb-2">Login</button>
            <div>
                <p>Dont Have An Account? | <a href="/signup">Sign Up</a></p>
            </div>
        </form>
    </div>
</div>

