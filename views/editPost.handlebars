<div class="row text-center">
    <h2>Edit Post</h2>
</div>

<div class="row my-3 bg-primary text-center" id="edit-post" data-id="{{postDataClean.id}}">
    <form>
        <div class="form-group text-center my-3">
            <input type="input" class="form-control my-2" id="new-post-title" value="{{postDataClean.title}}">
        </div>
        <div class="form-group text-center">
            <textarea class="form-control" id="new-post" rows="3">{{postDataClean.content}}</textarea>
        </div>
        <button type="submit" id="update-post" class="btn btn-info my-2">Save</button>
        <button type="submit" id="delete-post" class="btn btn-danger my-2">Delete</button>
    </form>
</div>

<script src="/js/editPost.js"></script>